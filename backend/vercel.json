{
  "version": 2,
  "functions": {
    "backend/api/index.ts": { "runtime": "nodejs20.x" }
  },
  "installCommand": "cd backend && npm ci",
  "buildCommand": "cd backend && npm run build",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.ts" },
    { "src": "/health",   "dest": "backend/api/index.ts" },
    { "src": "/db-check", "dest": "backend/api/index.ts" }
  ]
}
